---
// Strona główna (Home)
// W Astro każdy plik w src/pages/ automatycznie staje się routem
import BaseLayout from '../layouts/BaseLayout.astro';
import TheWelcome from '../components/TheWelcome.vue';

// Generuj tę stronę statycznie (prerender)
export const prerender = true;
---

<BaseLayout title="StravaGoals - Home">
  <main>
    <!-- 
      TheWelcome jako Vue component z client:load directive
      Pozwala na interaktywność komponentu po stronie klienta
    -->
    <TheWelcome client:load />
  </main>
</BaseLayout>

